<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/grey</item>
        <item name="colorButtonNormal">@color/colorForeground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AcceptButton">
        <item name="colorControlHighlight">@color/darkBlue</item>
        <item name="colorButtonNormal">@color/colorSearchButton</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorForeground</item>
    </style>


    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/colorForeground</item>
        <item name="titleTextColor">@color/colorForeground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
