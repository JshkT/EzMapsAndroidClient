<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moonstone.ezmaps_app">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity android:name=".FrontPage">

            <!-- Intent Filter changes the start up activity for the app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserSignUp" />
        <activity android:name=".UserLogin" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".NewContactSearch" />
        <activity
            android:name=".EditProfile"
            android:label="@string/title_edit_profile"
            android:theme="@style/AppTheme"
            android:title="Edit Profile" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBgYjlRPB5JtQs4OISpPl3RO7oKxgKKMZs" />

        <activity android:name=".ezmap" />
        <activity
            android:name=".ezdirection"
            android:label="@string/title_activity_ezdirection"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".error"
            android:label="@string/title_activity_error"
            android:theme="@style/AppTheme" />
        <activity android:name=".ImageUpload" />
        <activity android:name=".CameraUpload" />
        <activity android:name=".PopUpActivity"
            android:theme="@style/AppTheme.PopMe">
        </activity>
    </application>

</manifest>